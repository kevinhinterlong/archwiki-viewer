<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#333333"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:src="@drawable/ic_launcher"
            tools:layout_width="50dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:typeface="sans"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:text="ArchWiki Viewer"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <Button
            android:id="@+id/search"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_marginRight="2dp"
            android:background="@drawable/ic_search_grey_400_24dp"
            android:gravity="right|center_vertical"
            android:padding="10dp" />

        <Button
            android:id="@+id/overflow"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_marginRight="2dp"
            android:gravity="right|center_vertical"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lower_stripe"
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:layout_below="@id/header"
        android:background="#0088CC"
        android:orientation="horizontal" >
    </LinearLayout>

    <com.jtmcn.archwiki.viewer.WikiView
        android:id="@+id/wvMain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/lower_stripe" />

    <ProgressBar
        android:id="@+id/ProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>